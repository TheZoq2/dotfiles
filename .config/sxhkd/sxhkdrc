#
# bspwm hotkeys
#

#Close a node
super + q
	bspc node -c

super + b
	bspc node -B

# alternate between the tiled and monocle layout
super + x
	bspc desktop -l next

# focus the node for the given path jump
super + {comma,period}
	bspc node -f @{parent,brother}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + grave
	bspc node -f last.local

super + Tab
    skippy-xd


super + {_,shift + }{h,j,k,l}
    /home/frans/.config/bspwm/movement.py {focus,move} {west,south,north,east} ; rspc stack focus_current
    #bspc window -{f,s} {left,south,north,east}
    #~/.config/bspwm/movement.py {focus,move} {left,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

#Preselection stuff
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
# cancel the preselection for the focused desktop
super + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
#Resize preselection
super + ctrl + {1-9}
	bspc node -o 0.{1-9}


super + space ; s ; c
	rspc stack create

super + space ; s ; r
	rspc stack remove

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}


#Send nodes between desktops and focus other desktops
super + {_,shift + ,ctrl}{1-9,0}
	bspc {desktop -f,node -d,desktop -s} focused:^{1-9,10}

#Mouse stuff
# start move/resize
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
	bspc pointer -u


#super + x ; {1-9,0}
#	bspc node -r 0.{1-9}
super + x ; {1-9}
    #bspc node -r 0.{1-9}
    echo 0.{1-9}

super + space ; {1-9}
    bspc node -o 0.{1-9}
    echo {1-9}

super + w ; {1,2}
	~/wacomSetup.sh {HDMI1,eDP1}

#Ssh rofi prompt
super + p ; s
   rofi -show ssh -X -matching fuzzy -terminal "xfce4-terminal" -modi "ssh" -ssh-command "\{terminal\} --execute \{ssh-client\} \{host\}"

super + space ; {r,R}
	bspc node --rotate {90,270}

#
# wm independent hotkeys
#

super + Return
    xfce4-terminal
    #urxvt


super + r
    rofi -show run -X -matching fuzzy
	#lighthouse | sh

super + space ; k
    (setxkbmap -query | grep -q "layout:\s\+us") && setxkbmap se || setxkbmap us -variant altgr-intl -option caps:ctrl_modifier

super + ctrl + p
    /home/frans/.config/bspwm/lock

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
