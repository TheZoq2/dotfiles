#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit


super + q
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node -t {floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + {_,shift + }{h,j,k,l}
    /home/frans/.config/bspwm/movement.py {focus,move} {west,south,north,east}
	#bspc window -{f,s} {left,south,north,east}
    #~/.config/bspwm/movement.py {focus,move} {left,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

#super + bracket{west,east}
#	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -r {west -10,south +10,north -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -r {east -10,north +10,south -10,west +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:^{1-9,10}

#super + button{1-3}
#	bspc pointer -g {move,resize_side,resize_corner}
#
#super + !button{1-3}
#    bspc pointer --track %i %i
#
#super + @button{1-3}
#	bspc pointer -u
 
super + u
    scrot '%Y-%m-%d-%H%M%S.png' -e 'mv $f /home/frans/Pictures/screenshots'

#
# wm independent hotkeys
#

super + Return
    xfce4-terminal
    #urxvt

super + r
    rofi -show run -X
	#lighthouse | sh

super + space
    (setxkbmap -query | grep -q "layout:\s\+us") && setxkbmap se || setxkbmap us

super + ctrl + p
    /home/frans/.config/bspwm/lock

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
